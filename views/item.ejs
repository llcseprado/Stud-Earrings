<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header') %>
<body class="overflow-x-hidden bg-amber-100">
    <%- include('./partials/navbar') %>
    <div class="flex flex-row w-full h-full pt-28">
        <button>Back</button>
        <div class="basis-3/5 flex flex-row flex-wrap pl-24">
            <% for(var index=0; index < 3; index++){ %>
            <div class="w-80 h-80 border border-black bg-gray-50 rounded-lg shadow-md mr-2.5 mb-2.5">
                <img class="rounded-lg  object-cover" src="<%= itemData['photoUrl'][index] %>" alt="product image">
            </div>
            <% } %>
        </div>
        <div class="basis-2/5 mr-12">
             <p class="text-5xl font-heading_2 font-bold"><%=itemData['name'] %></p>
             <p class=" mt-8 text-4xl font-heading_2">Php <%= parseFloat(itemData['price']).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,' ) %></p>
             <p class="mt-8 font-normal font-bold ">CARE</p>
             <p class="mt-4 text-sm font-normal text-justify"><%= itemData['description'] %></p>
             <div></div>
             <!-- <div class="mt-8"> -->
                <table  class="mt-8 w-full">
                    <tr class="border  border-amber-900 text-center">
                      <th scope="col" class="py-3 px-6">#</th>
                      <th scope="col" class="py-3 px-6">Timestamp</th>
                      <th scope="col" class="py-3 px-6">Quantity</th>
                    </tr>
                    <tr class="border border-amber-900 text-center">
                      <td scope="col" class="py-3 px-6">1</td>
                      <td scope="col" class="py-3 px-6">Maria Anders</td>
                      <td scope="col" class="py-3 px-6">2</td>
                    </tr>
                  </table>
             <!-- </div> -->
        </div>
    </div>
    <%- include('./partials/footer') %>
</body>
</html>