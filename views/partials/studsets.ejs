<div class="w-screen h-screen pl-40 bg-amber-100 font-normal flex flex-row flex-wrap">

    <!-- <div class="ml-20"> -->
         <% for(var index=0; index < itemData.length-5; index++){ %>    
            <div class="w-full max-w-sm border border-black bg-white rounded-lg shadow-md mr-4 my-4 justify-items-end">
                <a href="#">
                    <img class="rounded-t-lg" src="<%= itemData[index].data()['photourl1'] %>" alt="product image">
                </a>
                <div class="px-5 pb-5">
                    <a href="#"> 

                        
                        <h5 class="text-xl font-semibold tracking-tight text-gray-900">
                            <%= itemData[index].data()['name'] %>
                        </h5>
                    
                    </a>
                    <div class="flex justify-between items-center mt-4">
                        <span class="text-3xl font-bold text-gray-900">
                            Php <%= parseFloat (itemData[index].data()['price']).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %>
                        </span>
                        <a href="#" class="text-amber-200 bg-amber-700 hover:text-amber-50 focus:ring-4 focus:outline-none focus:ring-amber-900 font-medium rounded-lg text-sm px-5 py-2.5 text-center">View Product</a>
                    </div>
                </div>
            </div>
        <% } %>
    <!-- </div> -->
</div>